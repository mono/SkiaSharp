<Window x:Class="Skia.WPF.Demo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Skia.WPF.Demo"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525" Loaded="Window_Loaded">
    <Grid>
        <local:SkiaControl x:Name="skiaView"/>
        <ComboBox x:Name="comboBox" Margin="0,0,10,10.5" Height="22" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="300" SelectionChanged="comboBox_SelectionChanged"/>
    </Grid>
</Window>
