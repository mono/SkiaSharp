<?xml version="1.0" encoding="utf-8" ?>
<local:HomeBasePage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                    xmlns:local="clr-namespace:DocsSamplesApp"
                    x:Class="DocsSamplesApp.Bitmaps.BitmapsHomePage"
                    Title="SkiaSharp Bitmaps">
    <CollectionView IsGrouped="True"
                    SelectionMode="Single"
                    SelectionChanged="OnSelectionChanged"
                    ItemTemplate="{StaticResource MenuItemTemplate}"
                    GroupHeaderTemplate="{StaticResource MenuSectionHeaderTemplate}">
        <CollectionView.ItemsSource>
            <x:Array Type="{x:Type local:MenuSection}">
                <local:MenuSection Name="Displaying Bitmaps">
                    <local:MenuItem Title="Pixel Dimensions"
                                    Detail="Display a bitmap in its pixel dimensions"
                                    Route="bitmaps/pixel-dimensions" />
                    <local:MenuItem Title="Fill Rectangle"
                                    Detail="Display a bitmap stretched to a rectangle"
                                    Route="bitmaps/fill-rectangle" />
                    <local:MenuItem Title="Uniform Scaling"
                                    Detail="Stretch a bitmap without losing the aspect ratio"
                                    Route="bitmaps/uniform-scaling" />
                    <local:MenuItem Title="Scaling Modes"
                                    Detail="Select how a bitmap is scaled and aligned"
                                    Route="bitmaps/scaling-modes" />
                    <local:MenuItem Title="Rectangle Subset"
                                    Detail="Display a rectangular subset of a bitmap"
                                    Route="bitmaps/rectangle-subset" />
                </local:MenuSection>

                <local:MenuSection Name="Bitmap Creation and Drawing">
                    <local:MenuItem Title="Hello, Bitmap!"
                                    Detail="Create a bitmap, draw on it, and render it"
                                    Route="bitmaps/hello-bitmap" />
                    <local:MenuItem Title="Monkey Moustache"
                                    Detail="Draw a moustache on a monkey"
                                    Route="bitmaps/monkey-moustache" />
                    <local:MenuItem Title="Pixelized Image"
                                    Detail="Pixelize part of a bitmap"
                                    Route="bitmaps/pixelized-image" />
                    <local:MenuItem Title="Bitmap Rotator"
                                    Detail="Rotate a bitmap by any angle"
                                    Route="bitmaps/bitmap-rotator" />
                    <local:MenuItem Title="Bitmap Flipper"
                                    Detail="Flip a bitmap horizontally or vertically"
                                    Route="bitmaps/bitmap-flipper" />
                </local:MenuSection>

                <local:MenuSection Name="Bitmap Cropping">
                    <local:MenuItem Title="Photo Cropping"
                                    Detail="Interactively define a bitmap cropping rectangle"
                                    Route="bitmaps/photo-cropping" />
                    <local:MenuItem Title="Photo Puzzle"
                                    Detail="Play the classic 14-15 game with a photo of your choice"
                                    Route="PhotoPuzzlePage1" />
                </local:MenuSection>

                <local:MenuSection Name="Segmented Bitmap Rendering">
                    <local:MenuItem Title="Nine Patch Display"
                                    Detail="Scale a bitmap interior without scaling the edges"
                                    Route="bitmaps/nine-patch-display" />
                    <local:MenuItem Title="Lattice Nine-Patch"
                                    Detail="Use the bitmap lattice feature to emulate nine-patch"
                                    Route="bitmaps/lattice-nine-patch" />
                    <local:MenuItem Title="Lattice Display"
                                    Detail="Experiment with the bitmap lattice display"
                                    Route="bitmaps/lattice-display" />
                </local:MenuSection>

                <local:MenuSection Name="Saving Bitmap Files">
                    <local:MenuItem Title="Save File Formats"
                                    Detail="Save a bitmap in various file formats"
                                    Route="bitmaps/save-file-formats" />
                    <local:MenuItem Title="Finger Paint with Save"
                                    Detail="Save your finger-painting artworks"
                                    Route="bitmaps/finger-paint-save" />
                    <local:MenuItem Title="SpinPaint"
                                    Detail="Create designs and save them"
                                    Route="bitmaps/spin-paint" />
                </local:MenuSection>

                <local:MenuSection Name="Accessing Pixel Bits">
                    <local:MenuItem Title="Gradient Bitmap"
                                    Detail="Render a gradient by accessing the pixel bits"
                                    Route="bitmaps/gradient-bitmap" />
                    <local:MenuItem Title="Rainbow Sine"
                                    Detail="Render a rainbow in the form of a sine curve"
                                    Route="bitmaps/rainbow-sine" />
                    <local:MenuItem Title="Color Adjustment"
                                    Detail="Interactively adjust hue, saturation, and luminosity"
                                    Route="bitmaps/color-adjustment" />
                    <local:MenuItem Title="Posterize"
                                    Detail="Reduce the color depths of an image"
                                    Route="bitmaps/posterize" />
                </local:MenuSection>

                <local:MenuSection Name="Animating Bitmaps">
                    <local:MenuItem Title="Mandelbrot Animation"
                                    Detail="Watch an animated series of bitmaps show the Mandelbrot Set"
                                    Route="bitmaps/mandelbrot-animation" />
                    <local:MenuItem Title="Animated GIF"
                                    Detail="Show the animated Newton's Cradle"
                                    Route="bitmaps/animated-gif" />
                </local:MenuSection>
            </x:Array>
        </CollectionView.ItemsSource>
    </CollectionView>
</local:HomeBasePage>