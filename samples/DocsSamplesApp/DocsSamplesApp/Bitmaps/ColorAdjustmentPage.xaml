<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:skia="clr-namespace:SkiaSharp.Views.Maui.Controls;assembly=SkiaSharp.Views.Maui.Controls"
             x:Class="DocsSamplesApp.Bitmaps.ColorAdjustmentPage"
             Title="Color Adjustment">
    <Grid RowDefinitions="*,Auto,Auto,Auto,Auto,Auto,Auto" Padding="10">

        <skia:SKCanvasView x:Name="canvasView"
                           PaintSurface="OnCanvasViewPaintSurface" />

        <Slider Grid.Row="1"
                x:Name="hueSlider"
                Maximum="360"
                Margin="10, 0"
                ValueChanged="OnSliderValueChanged" />

        <Label Grid.Row="2"
               x:Name="hueLabel"
               HorizontalTextAlignment="Center" />

        <Slider Grid.Row="3"
                x:Name="saturationSlider"
                Minimum="-1"
                Margin="10, 0"
                ValueChanged="OnSliderValueChanged" />

        <Label Grid.Row="4"
               x:Name="saturationLabel"
               HorizontalTextAlignment="Center" />

        <Slider Grid.Row="5"
                x:Name="luminositySlider"
                Minimum="-1"
                Margin="10, 0"
                ValueChanged="OnSliderValueChanged" />

        <Label Grid.Row="6"
               x:Name="luminosityLabel"
               HorizontalTextAlignment="Center" />

    </Grid>
</ContentPage>