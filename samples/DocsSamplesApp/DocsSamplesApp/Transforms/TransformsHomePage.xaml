<?xml version="1.0" encoding="utf-8" ?>
<local:HomeBasePage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                    xmlns:local="clr-namespace:DocsSamplesApp"
                    x:Class="DocsSamplesApp.Transforms.TransformsHomePage"
                    Title="SkiaSharp Transforms">
    <CollectionView IsGrouped="True"
                    SelectionMode="Single"
                    SelectionChanged="OnSelectionChanged"
                    ItemTemplate="{StaticResource MenuItemTemplate}"
                    GroupHeaderTemplate="{StaticResource MenuSectionHeaderTemplate}">
        <CollectionView.ItemsSource>
            <x:Array Type="{x:Type local:MenuSection}">
                <local:MenuSection Name="The Translate Transform">
                    <local:MenuItem Title="Accumulated Translate"
                                    Detail="Discover how transforms are accumulated"
                                    PageType="{x:Type local:Transforms.AccumulatedTranslatePage}" />
                    <local:MenuItem Title="Translate Text Effects"
                                    Detail="Use translation for basic text effects"
                                    PageType="{x:Type local:Transforms.TranslateTextEffectsPage}" />
                    <local:MenuItem Title="Hendecagram Array"
                                    Detail="Draw 11-pointed stars on the page"
                                    PageType="{x:Type local:Transforms.HendecagramArrayPage}" />
                    <local:MenuItem Title="Hendecagram Animation"
                                    Detail="Rotate the 11-pointed star in a circle"
                                    PageType="{x:Type local:Transforms.HendecagramAnimationPage}" />
                </local:MenuSection>

                <local:MenuSection Name="The Scale Transform">
                    <local:MenuItem Title="Basic Scale"
                                    Detail="Experiment with the scale transform"
                                    PageType="{x:Type local:Transforms.BasicScalePage}" />
                    <local:MenuItem Title="Centered Scale"
                                    Detail="Scale relative to a specified center point"
                                    PageType="{x:Type local:Transforms.CenteredScalePage}" />
                    <local:MenuItem Title="Anisotropic Scaling"
                                    Detail="Stretch a graphics object to fill the page"
                                    PageType="{x:Type local:Transforms.AnisotropicScalingPage}" />
                    <local:MenuItem Title="Anisotropic Text"
                                    Detail="Stretch text to fill the page"
                                    PageType="{x:Type local:Transforms.AnisotropicTextPage}" />
                    <local:MenuItem Title="Isotropic Scaling"
                                    Detail="Preserve the aspect ratios when scaling"
                                    PageType="{x:Type local:Transforms.IsotropicScalingPage}" />
                </local:MenuSection>

                <local:MenuSection Name="The Rotate Transform">
                    <local:MenuItem Title="Basic Rotate"
                                    Detail="Experiment with rotation"
                                    PageType="{x:Type local:Transforms.BasicRotatePage}" />
                    <local:MenuItem Title="Centered Rotate"
                                    Detail="Rotate objects around a center point"
                                    PageType="{x:Type local:Transforms.CenteredRotatePage}" />
                    <local:MenuItem Title="Rotated Text"
                                    Detail="Rotate a text string around a center"
                                    PageType="{x:Type local:Transforms.RotatedTextPage}" />
                    <local:MenuItem Title="Rotate and Revolve"
                                    Detail="Rotate a square around its center and also revolve"
                                    PageType="{x:Type local:Transforms.RotateAndRevolvePage}" />
                    <local:MenuItem Title="Ugly Analog Clock"
                                    Detail="First try with an analog clock"
                                    PageType="{x:Type local:Transforms.UglyAnalogClockPage}" />
                </local:MenuSection>

                <local:MenuSection Name="The Skew Transform">
                    <local:MenuItem Title="Skew Experiment"
                                    Detail="Discover how the skew transform works"
                                    PageType="{x:Type local:Transforms.SkewExperimentPage}" />
                    <local:MenuItem Title="Skew Angle Experiment"
                                    Detail="Specify skew in terms of angles"
                                    PageType="{x:Type local:Transforms.SkewAngleExperimentPage}" />
                    <local:MenuItem Title="Oblique Text"
                                    Detail="Tilt text for an oblique (or italic) effect"
                                    PageType="{x:Type local:Transforms.ObliqueTextPage}" />
                    <local:MenuItem Title="Skew Shadow Text"
                                    Detail="Use the skew transform for a text shadow"
                                    PageType="{x:Type local:Transforms.SkewShadowTextPage}" />
                </local:MenuSection>

                <local:MenuSection Name="Matrix Transforms">
                    <local:MenuItem Title="Path Transform"
                                    Detail="Apply a transform to a path"
                                    PageType="{x:Type local:Transforms.PathTransformPage}" />
                    <local:MenuItem Title="Show Affine Matrix"
                                    Detail="Display the matrix for affine transforms"
                                    PageType="{x:Type local:Transforms.ShowAffineMatrixPage}" />
                </local:MenuSection>

                <local:MenuSection Name="Touch Manipulations">
                    <local:MenuItem Title="Touch Manipulation"
                                    Detail="Pan, scale, and rotate a bitmap"
                                    PageType="{x:Type local:Transforms.TouchManipulationPage}" />
                    <local:MenuItem Title="Bitmap Scatter View"
                                    Detail="Pan, scale, and rotate multiple bitmaps"
                                    PageType="{x:Type local:Transforms.BitmapScatterViewPage}" />
                    <local:MenuItem Title="Single Finger Corner Scale"
                                    Detail="Pan and scale a bitmap with one finger"
                                    PageType="{x:Type local:Transforms.SingleFingerCornerScalePage}" />
                </local:MenuSection>

                <local:MenuSection Name="Non-Affine Transforms">
                    <local:MenuItem Title="Test Perspective"
                                    Detail="Experiment with the third matrix column"
                                    PageType="{x:Type local:Transforms.TestPerspectivePage}" />
                    <local:MenuItem Title="Taper Transform"
                                    Detail="Discover how to calculate a taper transform"
                                    PageType="{x:Type local:Transforms.TaperTransformPage}" />
                    <local:MenuItem Title="Show Non-Affine Matrix"
                                    Detail="Display the matrix for non-affine transforms"
                                    PageType="{x:Type local:Transforms.ShowNonAffineMatrixPage}" />
                </local:MenuSection>

                <local:MenuSection Name="3D Rotations">
                    <local:MenuItem Title="Rotation 3D"
                                    Detail="Rotate a 2D bitmap in 3D space"
                                    PageType="{x:Type local:Transforms.Rotation3DPage}" />
                    <local:MenuItem Title="Animated Rotation 3D"
                                    Detail="Animate a 2D object in 3D space"
                                    PageType="{x:Type local:Transforms.AnimatedRotation3DPage}" />
                </local:MenuSection>
            </x:Array>
        </CollectionView.ItemsSource>
    </CollectionView>
</local:HomeBasePage>