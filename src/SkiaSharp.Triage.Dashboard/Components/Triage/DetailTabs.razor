<div class="detail-tabs">
    @if (HasTriage)
    {
        <button type="button" class="detail-tab @(ActiveTab == "details" ? "active" : "")" @onclick='() => OnTabChanged.InvokeAsync("details")'>Details</button>
    }
    @if (HasRepro)
    {
        <button type="button" class="detail-tab @(ActiveTab == "repro" ? "active" : "")" @onclick='() => OnTabChanged.InvokeAsync("repro")'>Repro Log<span class="tab-badge">ğŸ§ª</span></button>
    }
</div>

@code {
    [Parameter] public bool HasTriage { get; set; }
    [Parameter] public bool HasRepro { get; set; }
    [Parameter] public bool HasFix { get; set; }
    [Parameter] public string ActiveTab { get; set; } = "details";
    [Parameter] public EventCallback<string> OnTabChanged { get; set; }
}
