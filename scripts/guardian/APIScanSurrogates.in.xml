<?xml version="1.0" encoding="utf-8"?>
<APIScanSurrogates>
  <Mappings>
    <!-- Win32 Clang to MSVC -->
    <Mapping>
      <SurrogateSet>
        <BinarySet>
          <SymbolLocations>
            <SymbolLocation>{SOFTWARE_FOLDER}</SymbolLocation>
            <SymbolLocation>SRV*https://symweb</SymbolLocation>
          </SymbolLocations>
          <Binary path="{SOFTWARE_FOLDER}\native\uwp\x86\libskiasharp.dll" />
        </BinarySet>
      </SurrogateSet>
      <Targets>
        <Binary path=".*\\native\\windows\\x86\\libskiasharp\.dll" pathType="Regex" />
      </Targets>
    </Mapping>
