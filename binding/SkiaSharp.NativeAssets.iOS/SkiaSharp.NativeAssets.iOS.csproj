<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFrameworks>$(TFMCurrent)-ios;$(TFMNext)-ios</TargetFrameworks>
    <PackagingGroup>SkiaSharp</PackagingGroup>
    <Title>$(PackagingGroup) - Native Assets for iOS</Title>
  </PropertyGroup>
  <ItemGroup>
    <PackageFile Include="..\..\output\native\ios\libSkiaSharp.framework\**" PackagePath="runtimes\ios\native\libSkiaSharp.framework\%(RecursiveDir)%(Filename)%(Extension)" />
    <PackageFile Include="..\..\output\native\iossimulator\libSkiaSharp.framework\**" PackagePath="runtimes\iossimulator\native\libSkiaSharp.framework\%(RecursiveDir)%(Filename)%(Extension)" />
  </ItemGroup>
  <Target Name="IncludeAdditionalTfmSpecificPackageFiles">
    <ItemGroup>
      <TfmSpecificPackageFile Include="buildTransitive\SkiaSharp.targets" PackagePath="buildTransitive\$(NuGetShortFolderName)\$(PackageId).targets" Exclude="buildTransitive\*.Local.*" />
    </ItemGroup>
  </Target>
</Project>