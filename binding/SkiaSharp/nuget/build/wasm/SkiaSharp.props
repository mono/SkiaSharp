<?xml version="1.0" encoding="utf-8"?>
<Project xmlns="http://schemas.microsoft.com/developer/msbuild/2003">

    <PropertyGroup>
        <_NativeLibraryCurrPath>$([System.IO.Path]::GetDirectoryName('$(MSBuildThisFileDirectory)'))</_NativeLibraryCurrPath>
        <_NativeLibraryDirName>$([System.IO.Path]::GetFileName('$(_NativeLibraryCurrPath)'))</_NativeLibraryDirName>
        <_NativeLibraryRootDir>$(MSBuildThisFileDirectory)..\..\build\$(_NativeLibraryDirName)\</_NativeLibraryRootDir>
    </PropertyGroup>

    <PropertyGroup>
        <SkiaSharpStaticLibraryPath>$(_NativeLibraryRootDir)libSkiaSharp.a</SkiaSharpStaticLibraryPath>
    </PropertyGroup>

    <ItemGroup>
        <SkiaSharpStaticLibrary Include="$(SkiaSharpStaticLibraryPath)" />
    </ItemGroup>

</Project>