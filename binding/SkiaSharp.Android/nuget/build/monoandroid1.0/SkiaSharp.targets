<?xml version="1.0" encoding="utf-8"?>
<Project xmlns="http://schemas.microsoft.com/developer/msbuild/2003">

    <!-- if ShouldIncludeNativeSkiaSharp == False then don't include the native libSkiaSharp -->
    <PropertyGroup>
        <ShouldIncludeNativeSkiaSharp Condition=" '$(ShouldIncludeNativeSkiaSharp)' == '' ">True</ShouldIncludeNativeSkiaSharp>
    </PropertyGroup>

    <PropertyGroup>
        <_NativeLibraryCurrPath>$([System.IO.Path]::GetDirectoryName('$(MSBuildThisFileDirectory)'))</_NativeLibraryCurrPath>
        <_NativeLibraryDirName>$([System.IO.Path]::GetFileName('$(_NativeLibraryCurrPath)'))</_NativeLibraryDirName>
        <_NativeLibraryRootDir>$(MSBuildThisFileDirectory)..\..\build\$(_NativeLibraryDirName)\</_NativeLibraryRootDir>
    </PropertyGroup>

    <ItemGroup Condition=" '$(ShouldIncludeNativeSkiaSharp)' != 'False' ">
        <AndroidNativeLibrary Include="$(_NativeLibraryRootDir)x86\libSkiaSharp.so" Abi="x86" />
        <AndroidNativeLibrary Include="$(_NativeLibraryRootDir)x64\libSkiaSharp.so" Abi="x86_64" />
        <AndroidNativeLibrary Include="$(_NativeLibraryRootDir)arm\libSkiaSharp.so" Abi="armeabi-v7a" />
        <AndroidNativeLibrary Include="$(_NativeLibraryRootDir)arm64\libSkiaSharp.so" Abi="arm64-v8a" />
    </ItemGroup>

</Project>