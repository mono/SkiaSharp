  </ItemGroup>
  <ItemGroup>
    <Compile Include="..\..\SkiaSharp.Views\SkiaSharp.Views.Shared\**\*.cs" Link="%(RecursiveDir)%(Filename)%(Extension)" />
    <Compile Include="..\..\SkiaSharp.Views\SkiaSharp.Views.UWP\UWPExtensions.cs" />
    <Compile Include="..\..\SkiaSharp.Views.Uno\SkiaSharp.Views.Uno\**\*.cs" Link="%(RecursiveDir)%(Filename)%(Extension)" />
    <Compile Include="..\..\SkiaSharp.Views.Uno\SkiaSharp.Views.Uno.Reference\*.cs" />
  </ItemGroup>
</Project>