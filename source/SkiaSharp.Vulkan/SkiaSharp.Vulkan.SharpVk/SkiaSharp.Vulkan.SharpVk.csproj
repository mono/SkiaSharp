<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFrameworks>$(BasicTargetFrameworks)</TargetFrameworks>
    <RootNamespace>SkiaSharp</RootNamespace>
    <AssemblyName>SkiaSharp.Vulkan.SharpVk</AssemblyName>
    <SignAssembly>false</SignAssembly>
    <PackagingGroup>SkiaSharp.Vulkan.SharpVk</PackagingGroup>
    <Title>SkiaSharp Vulkan support using SharpVk</Title>
    <PackageDescription>This package adds Vulkan support to SkiaSharp via SharpVk.</PackageDescription>
    <PackageTags>vulkan</PackageTags>
  </PropertyGroup>
  <ItemGroup>
    <PackageReference Include="SharpVk" Version="0.4.2" />
  </ItemGroup>
  <ItemGroup>
    <ProjectReference Include="..\..\..\binding\SkiaSharp\SkiaSharp.csproj" />
  </ItemGroup>
</Project>